zone "{{ oct_list[2] }}.{{ oct_list[1] }}.{{ oct_list[0] }}.in-addr.arpa" {
    type master;
    file "/var/cache/bind/zones/db.{{ oct_list[2] }}.{{ oct_list[1] }}.{{ oct_list[0] }}.in-addr.arpa";
    update-policy {
            grant rndc-key zonesub ANY;
    };
};
zone "{{ foreman_config.foreman_env.domain }}" {
    type master;
    file "/var/cache/bind/zones/db.{{ foreman_config.foreman_env.domain }}";
    update-policy {
            grant rndc-key zonesub ANY;
    };
};
