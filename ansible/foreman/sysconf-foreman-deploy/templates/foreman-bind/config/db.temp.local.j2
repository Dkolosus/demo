$ORIGIN .
$TTL 10800      ; 3 hours
{{ foreman_config.foreman_env.domain }}              IN SOA  foreman-bind.{{ foreman_config.foreman_env.domain }}. root.{{ foreman_config.foreman_env.domain }}. (
                                66         ; serial
                                86400      ; refresh (1 day)
                                3600       ; retry (1 hour)
                                604800     ; expire (1 week)
                                3600       ; minimum (1 hour)
                                )
                        NS      foreman-bind.{{ foreman_config.foreman_env.domain }}.

$ORIGIN {{ foreman_config.foreman_env.domain }}.
$TTL 10800      ; 3 hours
foreman-bind             A       {{ foreman_config.foreman_env.host_ip }}
$TTL 86400      ; 1 day
foreman-master           A       {{ foreman_config.foreman_env.host_ip }}
foreman-proxy            A       {{ foreman_config.foreman_env.host_ip }}
foreman-tftpd            A       {{ foreman_config.foreman_env.host_ip }}
foreman-isc-dhcp         A       {{ foreman_config.foreman_env.host_ip }}
foreman-http-iso         A       {{ foreman_config.foreman_env.host_ip }}
foreman-postgresql       A       {{ foreman_config.foreman_env.host_ip }}
